<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#5D1313">
    <title>Fathima | Admin</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/dashboard/style.css">
    <link rel="stylesheet" href="/dashboard/mediaQuery.css">
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="col-md-12">
        <div class="row">
            {{>dashboard/sidebar}}
            <div class="col-md-9 col-lg-9 col-xl-10" id="dash-body">
                {{>dashboard/header}}
                <div class="col-md-12 mt-5">
                    <div class="row">
                        <div class="heading"><strong>CONTACTS</strong></div>
                    </div>
                   {{!-- <div class="row">
                       <a href="/view/medicines" class="nav-menu active">View</a>
                       <a href="/create/medicines" class="nav-menu">Create New</a>
                    </div> --}}
                    <hr class="m-0">
                    <div class="row">
                        <div class="col-md-6 mt-3">
                            {{#if msgSuccess}}
                                <div>
                                    <div class="alert alert-success" role="alert">
                                        <strong>Success! </strong>{{msgSuccess}}
                                    </div>  
                                </div>
                            {{/if}}
                            {{#if msgErr}}
                                <div>
                                    <div class="alert alert-danger" role="alert">
                                        {{msgErr}}
                                    </div>  
                                </div>
                            {{/if}}
                            {{#each contacts as |item|}}
                            <div class="tmt-div-view d-flex">
                                <strong>{{item.name}}  <small>[{{item.mobile}}]</small></strong>
                                <a class="btn btn-info dlt-btn" data-toggle="modal" data-target="#exampleModalCenter"
                                onclick="passValue('{{item.name}}','{{item.mobile}}','{{item.email}}','{{item.message}}')" >View</a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
    <script>
		function passValue(name, mobile, email, message) {
			document.getElementById('showName').textContent = name;
            document.getElementById('showMobile').textContent = mobile;
            document.getElementById('showEmail').textContent = email;
            document.getElementById('showMessage').textContent = message;
		}
	</script>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Contact</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="col-md-12">
              <div class="row">
                    <p>Name &nbsp;&nbsp;:&nbsp;&nbsp;</p><p id="showName"></p>
              </div>
              <div class="row">
                    <p>Mobile &nbsp;&nbsp;:&nbsp;</p><p id="showMobile"></p>
              </div>
              <div class="row">
                <p>Email &nbsp;&nbsp;:&nbsp;</p><p id="showEmail"></p>
              </div>
              <div class="row">
                <p>Message &nbsp;&nbsp;:&nbsp;&nbsp;</p><p id="showMessage"></p>
              </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary pl-4 pr-4" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

    
</body>
</html>