<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#5D1313">
    <title>Fathima | Admin</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/dashboard/style.css">
    <link rel="stylesheet" href="/dashboard/mediaQuery.css">
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="col-md-12">
        <div class="row">
            {{>dashboard/sidebar}}
            <div class="col-md-9 col-lg-9 col-xl-10" id="dash-body">
                {{>dashboard/header}}
                <div class="col-md-12 mt-5">
                    <div class="row">
                        <div class="heading"><strong>MEDICINES</strong></div>
                    </div>
                   <div class="row">
                       <a href="/view/medicines" class="nav-menu active">View</a>
                       <a href="/create/medicines" class="nav-menu">Create New</a>
                    </div>
                    <hr class="m-0">
                    <div class="row">
                        <div class="col-md-6 mt-3">
                            {{#if msgSuccess}}
                                <div>
                                    <div class="alert alert-success" role="alert">
                                        <strong>Success! </strong>{{msgSuccess}}
                                    </div>  
                                </div>
                            {{/if}}
                            {{#if msgErr}}
                                <div>
                                    <div class="alert alert-danger" role="alert">
                                        {{msgErr}}
                                    </div>  
                                </div>
                            {{/if}}
                            {{#each medicines as |item|}}
                            <div class="tmt-div-view d-flex">
                                <strong>{{item.name}} <small> [{{item.index}}]</small></strong>
                                {{!-- <button class="btn btn-primary mr-3 view-btn">View</button> --}}
                                <a href="/edit/medicine/images/{{item.id}}" class="btn btn-info mr-3 edit-btn">Images</a>
                                <a href="/edit/medicine/{{item.id}}" class="btn btn-warning mr-3 edit-btn">Edit</a>
                                <a class="btn btn-danger dlt-btn"  onclick="passValue('{{item.id}}')" data-toggle="modal" data-target="#exampleModalCenter" >Delete</a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
    <script>
		function passValue(value) {
			document.getElementById('deleteId').value = value;
		}
	</script>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Medicine</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure? you want to delete this Medicine
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary pl-4 pr-4" data-dismiss="modal">Cancel</button>
        <form action="/delete/medicine" method="post">
            <input type="hidden" name="id" id="deleteId" readonly="true" value="">
            <button type="submit" class="btn btn-danger">Delete</button>
	    </form>
      </div>
    </div>
  </div>
</div>

    
</body>
</html>