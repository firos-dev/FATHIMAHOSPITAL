<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#5D1313" />
    <title>Fathima | Home</title>
    <link href="https://fonts.googleapis.com/css?family=Sofia" rel="stylesheet" />
    <link rel="stylesheet" href="./css/bootstrap.min.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" href="./css/aos.css" />
    <link rel="stylesheet" href="./css/mediaQuery.css" />
    <script src="./js/jquery.js"></script>
    <script src="./js/bootstrap.min.js"></script>
</head>

<body class="main-bg">
    <section class="banner-img-bg">
        <div class="black-shade">
            {{>header}}
            <div class="page-banner">
                <div class="container text-center">
                    <strong class="banner-caption">CONTACT</strong><br>
                    <div class="path mt-4">
                        <a class="path-item" href="/">Home</a> <span class="path-sep text-white"> /</span>
                        <a class="path-item active" aria-current="page">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <form action="/new/enquiry" method="post">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-control myinput" id="exampleInputPassword1" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword2">Mobile</label>
                            <input type="number" class="form-control myinput" id="exampleInputPassword2" name="mobile" required minlength="10">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Email address</label>
                            <input type="email" class="form-control myinput" id="exampleInputEmail3" aria-describedby="emailHelp" name="email">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea4">Message</label>
                            <textarea class="form-control myinput" id="exampleFormControlTextarea4" rows="3" name="message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-footer">Send</button>
                    </form>
                </div>
                
                <div class="col-md-1"></div>
                <div class="col-md-4 contact-details">
                    <strong class="contact-headings">Connect</strong>
                    <p class="myp mt-2">+91 999999999</p>
                    <p class="myp mb-4">example@mail.com</p>
                    <strong class="contact-headings cnt-head-center">Fathima <small>diabetes and skin</small></strong>
                    <p class="address myp mt-2">Opposite: indian oil petrol pump,</p>
                    <p class="myp">Trissure road,</p>
                    <p class="myp">Mankavu,</p>
                    <p class="myp">Calicut</p>
                </div>
            </div>
        </div>
    </section>

    {{>footer}}
</body>

</html>